extension = &quot;/xxx/xxx/xxx/eAccelerator533ts.so&quot;<BR>
eaccelerator.shm_size = &quot;16&quot;			#共享内存大小<BR>
eaccelerator.shm_size = &quot;16&quot;			#共享内存大小<BR>
eaccelerator.shm_size = &quot;16&quot;			#共享内存大小<BR>
eaccelerator.shm_size = &quot;16&quot;			#共享内存大小<BR>
eaccelerator.shm_size = &quot;16&quot;			#共享内存大小<BR>
eaccelerator.shm_size = &quot;16&quot;			#共享内存大小<BR>
eaccelerator.shm_size = &quot;16&quot;			#共享内存大小<BR>
eaccelerator.shm_size = &quot;16&quot;			#共享内存大小<BR>
eaccelerator.shm_size = &quot;16&quot;			#共享内存大小<BR>
