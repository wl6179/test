<DT>改一下Controller.php组件</DT>
<!--property:icon_internal=blank-->
<!--property:syntax_highlight=sh-->
<!--property:date_created=1364549833-->
<!--property:date_modified=1412961327-->
<DD>
...<BR>
public $layout='//layouts/<b>blog</b>';<BR>
...<BR>

</DD>
