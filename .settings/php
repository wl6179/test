......<BR>
public function actionVerify(){<BR>
        //验证参数合法性<BR>
        <BR>
    	$UserModel = new User('<b><span style="background-color:#00ff00">login</span></b>');        // &lt;----------------看到search了没？！chris<BR>
    	if ($_POST){<BR>
.......
