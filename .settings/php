// 参数处理区<BR>
// 验证id<BR>
$classid = empty($_GET['classid']) ? 0 : $_GET['classid']+0;<BR>
//$classid = is_numeric($_GET['classid']) ? $_GET['classid'] : 0;<BR>
// 分页 begin<BR>
$page = empty($_GET['page']) ? 1 : $_GET['page']+0;<BR>
if ($page &lt; 1) {<BR>
	$page = 1;<BR>
}<BR>
$page_number_perpage = 2;		// 自定义<BR>
$offset = ($page -1) * $page_number_perpage;	// 偏移量<BR>
// 分页 end<BR>
