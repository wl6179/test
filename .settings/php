<BR>
	// $_POST<BR>
	//（特殊处理 字段）<BR>
	$_POST['good_good_weight']		*= ($_POST['good_good_weightunit']+0);	// chris 提前先处理好了！<BR>
	<span style="color:#1e90ff">//  上传图片：（必先处理！）<BR>
	// $_POST是接收不到此file字段的！！！</span><BR>
	$library_upfile_single = <b>new</b> <span style="background-color:#ffc0cb">upfile_single_library</span>();<BR>
	$fileresult = $library_upfile_single-&gt;<b>up</b>('good_good_originalimage');<BR>
	if ($fileresult) {<BR>
		// echo end(explode(&quot;/image/&quot;, $fileresult));<BR>
		// exit();<BR>
		if (is_array( explode(&quot;/image/&quot;, $fileresult) )) {<span style="background-color:#00ff00"><b><BR>
			$_</b>POST['good_good_originalimage'] = end(explode(&quot;/image/&quot;, $fileresult));   //处理字段</span>！！！~<BR>
		} else {<span style="background-color:#00ff00"><b><BR>
			$_</b>POST['good_good_originalimage'] = $fileres</span>ult;		<BR>
		}<BR>
	} else {<BR>
		// false!<BR>
		// 不处理此file字段值，大概就为空了！chris<BR>
	}<BR>
	<BR>
	<BR>
	// 第三步：实例化model。并调用model相关的方法。（先 创建表）<BR>
	$model_good_good = <b>new GoodGoodM</b>odel();<BR>
	
