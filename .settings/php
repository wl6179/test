&lt;link rel=&quot;stylesheet&quot; href=&quot;&lt;?php echo Yii::app()-&gt;request-&gt;baseUrl ?&gt;/assets/index/css/layout.css&quot; type=&quot;text/css&quot; media=&quot;all&quot;&gt;<BR>
&lt;link rel=&quot;stylesheet&quot; href=&quot;&lt;?php echo Yii::app()-&gt;request-&gt;baseUrl ?&gt;/assets/index/css/style.css&quot; type=&quot;text/css&quot; media=&quot;all&quot;&gt;<BR>
&lt;script type=&quot;text/javascript&quot; src=&quot;&lt;?php echo Yii::app()-&gt;request-&gt;baseUrl ?&gt;/assets/index/js/jquery-1.4.2.js&quot; &gt;&lt;/script&gt;<BR>
