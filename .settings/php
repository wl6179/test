			array('good_good_ishot', 'value', NULL),			// 要针对哪些列做填充（value指固定值，值是NULL）<BR>
			array('good_good_isnew', 'value', NULL),			// 要针对哪些列做填充（value指固定值，值是NULL）<BR>
			array('good_good_isbest', 'value', NULL),			// 要针对哪些列做填充（value指固定值，值是NULL）<BR>
			//array('good_good_addtime', 'function', 'time')	// 要针对哪些列做填充（value指 函数返回值，值是time()）<BR>
	);<BR>
	<BR>
	<BR>
	。。。。<BR>
	<BR>
	<BR>
