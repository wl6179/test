<DT>创建模型User</DT>
<!--property:icon_internal=blank-->
<!--property:syntax_highlight=sh-->
<!--property:date_created=1364549833-->
<!--property:date_modified=1413310259-->
<DD>
&lt;?php<BR>
/**<BR>
 * <b>用户表</b><BR>
 */<BR>
class <b>User</b> extends CActiveRecord{<BR>
	/**<BR>
	 * 必不可缺方法1，返回 模型<BR>
	 * @param system $className<BR>
	 * @return Ambigous &lt;unknown, multitype:&gt;<BR>
	 */<BR>
	public static function model($className=__CLASS__){<BR>
		return parent::model($className);<BR>
	}<BR>
	/**<BR>
	 * 必不可缺方法2，返回 表名<BR>
	 * (non-PHPdoc)<BR>
	 * @see CActiveRecord::tableName()<BR>
	 */<BR>
	public function tableName(){<BR>
		return &quot;{{<b>user</b>}}&quot;;<BR>
	}<BR>
	<BR>
	<BR>
	<BR>
}
</DD>
