	&lt;script type=&quot;text/javascript&quot; src=&quot;&lt;?php echo Yii::app()-&gt;request-&gt;baseUrl ?&gt;/assets/index/js/ie6_script_other.js&quot;&gt;&lt;/script&gt;<BR>
