<DD>
# 定义根路径常量<BR>
define('ROOT','/var/svnclient/html/project_x03/src/')<BR>
require(ROOT . 'include/config.inc.php');<BR>
require(ROOT . 'include/<b>mysql.func.php</b>');	# 这样include的类 将会越来越多，无尽的多。。<BR>
<BR>
# 检测当前是否开发环境 - Debug项<BR>
if(defined('DEBUG')) {<BR>
	error_reporting(E_ALL|E_STRICT);<BR>
} else {<BR>
	error_reporting(0);<BR>
}<BR>
<BR>
# 检测“魔术引号功能”有没有开启！  如没开则递归对 超全局变量 进行转义。<BR>
if(!get_magic_quotes_gpc()) {<BR>
	function _addslashes(&amp;$v,$k) {<BR>
		$v = addslashes($v);<BR>
	}<BR>
	array_walk_recursive(&amp;$_GET,'_addslashes');	# 对数组中的<b>每个成员</b>递归地应用用户函数~<BR>
	array_walk_recursive(&amp;$_POST,'_addslashes');<BR>
	array_walk_recursive(&amp;$_COOKIE,'_addslashes');<BR>
}<BR>
<BR>
# 连接数据库<BR>
$conn = mysql_connect($_CFG['host'],$_CFG['user'],$_CFG['passwd']);<BR>
if(!$conn) {<BR>
	... ...<BR>
}<BR>
... ...<BR>

